{
  "name": "Transport Management Service",
   "image": "mcr.microsoft.com/devcontainers/java:17",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "forwardPorts": [8081, 8025, 5540, 6379, 9094],

  "remoteEnv": {
    "SPRING_PROFILES_ACTIVE": "codespaces"
  },

  "postCreateCommand": "echo 'Transport Management Service dev container created âœ”'",

  "postStartCommand": "bash .devcontainer/startup.sh",

  "mounts": [
    "source=maven-cache,target=/root/.m2,type=volume"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-spring-boot",
        "vscjava.vscode-spring-initializr",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "java.server.launchMode": "Standard",
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-17",
            "path": "/usr/local/sdkman/candidates/java/current",
            "default": true
          }
        ],
        "spring-boot.ls.problem.application-properties.enabled": true
      }
    }
  }
}